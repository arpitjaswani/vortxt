<!DOCTYPE html>
<html lang="en">
<% include ../partials/head.ejs %>
  <body>
    <% include ../partials/header.ejs %>
    <main>
      </br>
      <% messages.forEach(function(message) { %>
        <div class="container">
          <span><%= message.username %>: <%= message.message %></span>
          <form action="<%= '/messages/' + message.id + '?_method=DELETE' %>" method="POST">
            <input type="submit" class="btn btn-danger" value="X" />
          </form>
          </br>
        </div>
      <% }) %>
    <form action="/messages" method="POST" class="form-inline">
      <div class="form-group">
        <input type="text" class="form-control" name="message" placeholder="Your Message">
      </div>
      <button type="submit" class="btn btn-default">Send</button>
    </form>
    </main>
    <% include ../partials/footer.ejs %>
  </body>
</html>
