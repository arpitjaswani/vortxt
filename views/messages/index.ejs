<!DOCTYPE html>
<html lang="en">
<% include ../partials/head.ejs %>
  <body>
    <% include ../partials/header.ejs %>
    <main>
    </br>
    <form action="/messages" method="POST" class="form-inline">
      <div class="form-group">
        <input id="m" autocomplete="off" type="text" class="form-control" name="message" placeholder="Your Message" />
      </div>
      <button type="submit" class="btn btn-default">Send</button>
    </form>
    </br>
    <div class="flex-container">
      <div class="messages-scroll">
        <ul id="messages">
          <% messages.forEach(function(message) { %>
            <div class="container">
              <li><%= message.username %>: <%= message.message %>
                <form action="<%= '/messages/' + message.id + '?_method=DELETE' %>" method="POST">
                  <input type="submit" class="btn btn-danger btn-xs" value="X" />
                </form>
              </li>
              </br>
            </div>
          <% }) %>
        </ul>
      </div>
    </div>

    </main>
    <footer>
      <div class="box">
        <button type="button" class="btn btn-default">
        <a href="/auth/logout">Logout</a>
      </button>
      </div>
    </footer>
    <% include ../partials/footer.ejs %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/1.7.3/socket.io.js"></script>
    <script src="http://code.jquery.com/jquery-1.11.1.js"></script>
    <script>
      var socket = io();
      $('form').submit(function(){
        socket.emit('chat message', $('#m').val());
        $('#m').val('');
        return false;
      });
      socket.on('chat message', function(msg){
        $('#messages').append($('<li>').text(msg));
      });
    </script>
  </body>
</html>
